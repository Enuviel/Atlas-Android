<resources>

    <!-- ########### -->
    <!-- Atlas Style -->
    <!-- ########### -->
    <style name="Theme.Atlas.Base.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="AtlasConversationList">@style/AtlasConversationList</item>
        <item name="AtlasMessageComposer">@style/AtlasMessageComposer</item>
        <item name="AtlasMessageList">@style/AtlasMessageList</item>
        <item name="AtlasParticipantPicker">@style/AtlasParticipantPicker</item>
        <item name="AtlasTypingIndicator">@style/AtlasTypingIndicator</item>

        <item name="colorPrimary">@color/atlas_background_blue</item>
        <item name="colorPrimaryDark">@color/atlas_background_blue_dark</item>
        <item name="colorAccent">@color/atlas_background_blue_bright</item>

        <item name="actionBarStyle">@style/AtlasActionBar</item>
        <item name="actionBarTabTextStyle">@style/AtlasActionBarTabText</item>
        <item name="actionMenuTextColor">@color/atlas_text_white</item>
        <item name="actionButtonStyle">@style/AtlasActionBarButton</item>
        <item name="actionOverflowButtonStyle">@style/AtlasActionBarOverflowButton</item>

        <item name="android:windowBackground">@color/atlas_background_white</item>
    </style>

    <style name="Theme.Atlas.Light" parent="Theme.Atlas.Base.Light">
        <!-- v21 adds custom items -->
    </style>


    <!-- #################################### -->
    <!-- Styleable Atlas Component Attributes -->
    <!-- #################################### -->
    <declare-styleable name="AtlasConversationsList">
        <attr name="cellTitleTextColor"/>
        <attr name="cellTitleTextTypeface"/>
        <attr name="cellTitleTextStyle"/>
        <attr name="cellTitleUnreadTextColor"/>
        <attr name="cellTitleUnreadTextTypeface"/>
        <attr name="cellTitleUnreadTextStyle"/>
        <attr name="cellSubtitleTextColor"/>
        <attr name="cellSubtitleTextTypeface"/>
        <attr name="cellSubtitleTextStyle"/>
        <attr name="cellSubtitleUnreadTextColor"/>
        <attr name="cellSubtitleUnreadTextTypeface"/>
        <attr name="cellSubtitleUnreadTextStyle"/>
        <attr name="cellBackgroundColor"/>
        <attr name="cellUnreadBackgroundColor"/>
        <attr name="dateTextColor"/>
        <attr name="avatarTextColor"/>
        <attr name="avatarBackgroundColor"/>
    </declare-styleable>

    <declare-styleable name="AtlasMessageComposer">
        <attr name="composerTextColor"/>
        <attr name="composerTextSize"/>
        <attr name="composerTextTypeface"/>
        <attr name="composerTextStyle"/>
    </declare-styleable>

    <declare-styleable name="AtlasMessagesList">
        <attr name="myBubbleColor"/>
        <attr name="myTextColor"/>
        <attr name="myTextSize"/>
        <attr name="myTextTypeface"/>
        <attr name="myTextStyle"/>
        <attr name="theirBubbleColor"/>
        <attr name="theirTextColor"/>
        <attr name="theirTextSize"/>
        <attr name="theirTextTypeface"/>
        <attr name="theirTextStyle"/>
        <attr name="dateTextColor"/>
        <attr name="avatarTextColor"/>
        <attr name="avatarBackgroundColor"/>
    </declare-styleable>

    <declare-styleable name="AtlasParticipantPicker">
        <attr name="inputTextColor"/>
        <attr name="inputTextTypeface"/>
        <attr name="inputTextStyle"/>
        <attr name="listTextColor"/>
        <attr name="listTextTypeface"/>
        <attr name="listTextStyle"/>
        <attr name="avatarBackgroundColor"/>
        <attr name="avatarTextColor"/>
        <attr name="chipBackgroundColor"/>
        <attr name="chipTextColor"/>
        <attr name="chipTextTypeface"/>
        <attr name="chipTextStyle"/>
    </declare-styleable>

    <declare-styleable name="AtlasTypingIndicator">
        <attr name="indicatorTextColor"/>
        <attr name="indicatorTextSize"/>
        <attr name="indicatorTextTypeface"/>
        <attr name="indicatorTextStyle"/>
    </declare-styleable>


    <!-- ############################## -->
    <!-- Default Atlas Component Styles -->
    <!-- ############################## -->
    <style name="AtlasConversationList">
        <item name="cellTitleTextColor">@color/atlas_text_black</item>
        <item name="cellTitleTextTypeface">normal</item>
        <item name="cellTitleTextStyle">normal</item>
        <item name="cellTitleUnreadTextColor">@color/atlas_text_black</item>
        <item name="cellTitleUnreadTextTypeface">normal</item>
        <item name="cellTitleUnreadTextStyle">bold</item>
        <item name="cellSubtitleTextColor">@color/atlas_text_black</item>
        <item name="cellSubtitleTextTypeface">normal</item>
        <item name="cellSubtitleTextStyle">normal</item>
        <item name="cellSubtitleUnreadTextColor">@color/atlas_text_black</item>
        <item name="cellSubtitleUnreadTextTypeface">normal</item>
        <item name="cellSubtitleUnreadTextStyle">bold</item>
        <item name="cellBackgroundColor">@android:color/transparent</item>
        <item name="cellUnreadBackgroundColor">@android:color/transparent</item>
        <item name="dateTextColor">@color/atlas_text_blue</item>
        <item name="avatarTextColor">@color/atlas_text_black</item>
        <item name="avatarBackgroundColor">@color/atlas_background_gray</item>
    </style>

    <style name="AtlasMessageComposer">
        <item name="composerTextColor">@color/atlas_text_black</item>
        <item name="composerTextSize">@dimen/atlas_text_size_general</item>
        <item name="composerTextTypeface">normal</item>
        <item name="composerTextStyle">normal</item>
    </style>

    <style name="AtlasMessageList">
        <item name="myBubbleColor">@color/atlas_bubble_blue</item>
        <item name="myTextColor">@color/atlas_text_white</item>
        <item name="myTextSize">@dimen/atlas_text_size_general</item>
        <item name="myTextTypeface">normal</item>
        <item name="myTextStyle">normal</item>
        <item name="theirBubbleColor">@color/atlas_background_gray</item>
        <item name="theirTextColor">@color/atlas_text_black</item>
        <item name="theirTextSize">@dimen/atlas_text_size_general</item>
        <item name="theirTextTypeface">normal</item>
        <item name="theirTextStyle">normal</item>
        <item name="dateTextColor">@color/atlas_text_gray</item>
        <item name="avatarTextColor">@color/atlas_text_black</item>
        <item name="avatarBackgroundColor">@color/atlas_background_gray</item>
    </style>

    <style name="AtlasParticipantPicker">
        <item name="inputTextColor">@color/atlas_text_black</item>
        <item name="inputTextTypeface">normal</item>
        <item name="inputTextStyle">normal</item>
        <item name="listTextColor">@color/atlas_text_black</item>
        <item name="listTextTypeface">normal</item>
        <item name="listTextStyle">normal</item>
        <item name="avatarBackgroundColor">@color/atlas_background_gray</item>
        <item name="avatarTextColor">@color/atlas_text_black</item>
        <item name="chipBackgroundColor">@color/atlas_background_gray</item>
        <item name="chipTextColor">@color/atlas_text_black</item>
        <item name="chipTextTypeface">normal</item>
        <item name="chipTextStyle">normal</item>
    </style>

    <style name="AtlasTypingIndicator">
        <item name="indicatorTextColor">@color/atlas_text_black</item>
        <item name="indicatorTextSize">@dimen/atlas_text_size_general</item>
        <item name="indicatorTextTypeface">normal</item>
        <item name="indicatorTextStyle">normal</item>
    </style>


    <!-- ########## -->
    <!-- Action Bar -->
    <!-- ########## -->
    <style name="AtlasActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/AtlasActionBarTitleText</item>
        <item name="background">@color/atlas_background_blue</item>
    </style>

    <style name="AtlasActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/atlas_text_white</item>
    </style>

    <style name="AtlasActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/atlas_text_white</item>
    </style>

    <style name="AtlasActionBarButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:tint">@color/atlas_background_white</item>
    </style>

    <style name="AtlasActionBarOverflowButton" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/atlas_background_white</item>
    </style>

</resources>
